{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",
    "lib": ["ES6"],

    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext", // Add this line
    "rootDir": "./src",
    "resolveJsonModule": true,

    /* Emit */
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}